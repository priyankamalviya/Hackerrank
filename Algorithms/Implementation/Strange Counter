import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        long t = in.nextLong();
        long reset = 1, result;
       
        while(reset<=t)
        { 
            reset = reset * 2 + 2;
        }
            result = reset-t;
        System.out.println(result);
    }
}
